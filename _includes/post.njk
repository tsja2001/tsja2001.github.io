{% extends "_layout.njk" %}

{% block layoutBody %}
<div>
  <div class="container mx-auto prose py-12 sm:py-24 px-12 sm:px-0">
    <div class="mb-12 flex gap-2">
      <a class="no-underline font-bold" href="/">{{ config.title }}</a>
      <a href="/">首页</a>
      <a href="/daily">随笔</a>
      <a href="/blog">文章</a>
    </div>
    <h1>{{ title }}</h1>

    <div class="italic text-gray-500">
      {% date date %}
    </div>
    <div>
      {{content | safe}}
    </div>
    <hr />
      <div class="text-sm text-center">
        评论和交流请提交
        <a href="https://github.com/tsja2001/tsja2001.github.io/issues">
          issue
        </a>
      </div>
      <hr />
    {% include "_footer.njk" %}
  </div>

</div>

{% endblock %}
